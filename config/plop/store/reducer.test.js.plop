import reducer, { initialState } from './reducer';
import { ActionTypes } from './actions';

describe('{{pascalCase storeName}} reducer', () => {
    let state = reducer(undefined, {});

    beforeEach(() => {
        state = { ...initialState };
    });

    it('should return the initial state', () => {
        expect(initialState).toEqual(state);
    });

    it('should change into loading state', () => {
        state.isLoading = true;
        expect(reducer(undefined, { type: ActionTypes.{{upperCase (snakeCase storeName)}}_REQUEST })).toEqual(state);
    });

    it('should invalidate the data in the store', () => {
        state.didInvalidate = true;
        expect(reducer(undefined, { type: ActionTypes.{{upperCase (snakeCase storeName)}}_INVALIDATE })).toEqual(state);
    });
});
